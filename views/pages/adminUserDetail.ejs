<!DOCTYPE html>
<html>
<head>
  <%include ../partials/head %>
</head>
<body>
  <%include ../partials/nav %>
  <div class="container">
  <div class="row col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
    <div class="card">
      <div class="header">
        <h4 class="title">Edit User Profile</h4>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control border-input" id="idEmail" disabled placeholder="Email" value="<%= currentUser.email%>" tag="<%= currentUser._id%>">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Username</label>
              <input type="text" class="form-control border-input" id="idUserName" disabled placeholder="Username" value="<%= currentUser.name%>" tag="<%= currentUser.type%>">
            </div>
          </div>
        </div>
        <% if (user.type == "local") { %>
        <div class="row">
          <!-- password -->
          <div class="col-md-6">
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control border-input" id="idPassword" placeholder="Password" value="<%= currentUser.password%>">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Confirm Password</label>
              <input type="password" class="form-control border-input" id="idConfirmPassword" placeholder="Password" value="<%= currentUser.password%>">
            </div>
          </div>
          <!-- end password -->
        </div>
        <% } %>

        <div class="row">
          <div class="col-md-4"><!--first name-->
            <div class="form-group">
              <label>First Name</label>
              <input type="text" class="form-control border-input" id="idFirstName" placeholder="First Name" value="<%= currentUser.shippingInfo.firstName%>">
            </div>
          </div>
          <div class="col-md-4"><!--last name-->
            <div class="form-group">
              <label>Last Name</label>
              <input type="text" class="form-control border-input" id="idLastName" placeholder="Last Name" value="<%= currentUser.shippingInfo.lastName%>">
            </div>
          </div>
          <div class="col-md-4"><!--phone number-->
            <div class="form-group">
              <label>Phone</label>
              <input type="text" class="form-control border-input" id="idPhoneNumber" placeholder="Phone Number" value="<%= currentUser.shippingInfo.phoneNumber %>">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12"><!--address-->
            <div class="form-group">
              <label>Address</label>
              <input type="text" class="form-control border-input" id="idAddress" placeholder="Home Address" value="<%= currentUser.shippingInfo.streetAddress%>">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4"><!--city-->
            <div class="form-group">
              <label>City</label>
              <input type="text" class="form-control border-input" id="idCity" placeholder="City" value="<%= currentUser.shippingInfo.city%>">
            </div>
          </div>
          <div class="col-md-4"><!--state-->
            <div class="form-group">
              <label>State</label>
              <input type="text" class="form-control border-input" id="idState" placeholder="State" value="<%= currentUser.shippingInfo.state%>">
            </div>
          </div>
          <div class="col-md-4"><!--zip code-->
            <div class="form-group">
              <label>Postal Code</label>
              <input type="number" class="form-control border-input" id="idZipCode" placeholder="ZIP Code" value="<%= currentUser.shippingInfo.zip%>">
            </div>
          </div>
        </div>
        <div class="row text-center">
          <a href="/admin/user"><button class="btn btn-success" id="btnBackToList">Back to User List</button></a>
        </div>
      </div><!-- end content -->
    </div><!-- end card -->
  </div><!-- end row -->
</div><!-- end container -->
  <%include ../partials/footer%>
</body>
</html>
