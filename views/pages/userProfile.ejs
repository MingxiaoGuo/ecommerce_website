<!DOCTYPE html>
<html>
<head>
  <%include ../partials/head %>
</head>
<body>
  <%include ../partials/nav %>
  <div class="container col-lg-4 col-lg-offset-4">
    <!--[START] facebook profile -->
    <div class="row">
      <div class="card card-user">
        <div class="image">
          <img src="/images/background.jpg" alt="..."/>
        </div>
        <div class="content">
          <!-- start profile photo -->
          <div class="author">
            <img class="avatar border-white" src="<%= user.profilePhoto %>" alt="user_photo"/>
          </div><!-- end profile photo -->
          <!-- start user profile -->
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>UserName</label>
                <input type="text" class="form-control border-input" id="idUserName" placeholder="UserName" disabled value="<%= user.name%>">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control border-input" id="idEmail" placeholder="Email" disabled value="<%= user.email%>">
              </div>
            </div>
          </div> <!-- end user profile -->
          <hr>
          <!-- start shipping info -->
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control border-input" id="idFirstName" placeholder="First Name" disabled value="<%= user.shippingInfo.firstName%>">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control border-input" id="idLastName" placeholder="Last Name" disabled value="<%= user.shippingInfo.lastName%>">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Phone</label>
                <input type="text" class="form-control border-input" id="idPhoneNumber" placeholder="Phone Number" disabled value="<%= user.shippingInfo.phoneNumber %>">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control border-input" id="idAddress" placeholder="Home Address" disabled value="<%= user.shippingInfo.streetAddress%>">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control border-input" id="idCity" placeholder="City" disabled value="<%= user.shippingInfo.city%>">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>State</label>
                <input type="text" class="form-control border-input" id="idState" placeholder="State" disabled value="<%= user.shippingInfo.state%>">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Postal Code</label>
                <input type="number" class="form-control border-input" id="idZipCode" placeholder="ZIP Code" disabled value="<%= user.shippingInfo.zip%>">
              </div>
            </div>
          </div><!-- end shipping info -->
        </div>
        <hr>
        <div class="text-center">
          <a href="/userProfile/edit"><button class="btn btn-success">Edit</button> </a>
        </div>
      </div>
    </div>
  </div>
  <%include ../partials/footer%>
  <script>
  </script>
</body>
</html>
