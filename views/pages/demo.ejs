<!DOCTYPE html>
<html>
<head>
  <%include ../partials/head %>
</head>
<body>
  <%include ../partials/nav %>
  <div class="container">
    <div class="row">
      <% for (var i = 0; i < productList.length; i++) { %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail myProductOverviewItem">
            <!-- product picture -->
            <img src="<%=productList[i].productPhotos[0]%>" alt="name" >
            <div class="caption">
              <table class="table table-hover">
                <tr>
                  <td>Name: </td>
                  <td><%=productList[i].name%></td>
                </tr>
                <tr>
                  <td>Price: </td>
                  <td><i class="fa fa-usd" aria-hidden="true"></i>&nbsp;<%=productList[i].price%></td>
                </tr>
                <tr>
                  <td>Inventory: </td>
                  <td><%=productList[i].inventory%></td>
                </tr>
              </table>
              <p>
                <a href="/bike/detail/<%=productList[i].id%>" class="btn btn-primary btn-block">Detail</a>
              </p>
            </div>
          </div>
        </div>
        <% } %>
      <!-- [END] product list -->
    </div> <!-- end of row -->
  </div>
  <%include ../partials/footer%>
  <script>
    $(document).ready(function () {
      $(".btnProductDetail").on("click", function () {
        var id = $(this).attr("tag");
        //console.log(id);
        var url = "/bike/detail/" + id;
        console.log(url);
        window.location.href = url;
      });
    });

  </script>
</body>
</html>
